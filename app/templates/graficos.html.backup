<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>游늵 Gr치ficos de Aver칤as</title>
    
    <!-- Chart.js desde CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
            color: #333;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
            color: white;
            text-shadow: 0 2px 10px rgba(0,0,0,0.2);
        }

        .header h1 {
            font-size: 2.8em;
            margin-bottom: 10px;
        }

        .header p {
            font-size: 1.2em;
            opacity: 0.9;
        }

        .menu {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 40px;
            flex-wrap: wrap;
        }

        .menu a {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            text-decoration: none;
            padding: 12px 24px;
            border-radius: 50px;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .menu a:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

        .menu a.active {
            background: rgba(255, 255, 255, 0.25);
            font-weight: bold;
            border: 1px solid rgba(255, 255, 255, 0.4);
        }

        .stats-bar {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.95);
            padding: 25px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }

        .stat-number {
            font-size: 3em;
            font-weight: bold;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }

        .stat-label {
            color: #666;
            font-size: 1.1em;
        }

        .charts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
            gap: 30px;
            margin-bottom: 40px;
        }

        @media (max-width: 1200px) {
            .charts-grid {
                grid-template-columns: 1fr;
            }
        }

        .chart-container {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }

        .chart-title {
            font-size: 1.4em;
            font-weight: bold;
            color: #333;
        }

        .chart-wrapper {
            position: relative;
            height: 350px;
            width: 100%;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            margin: 40px 0;
        }

        .empty-state h2 {
            color: #666;
            margin-bottom: 20px;
        }

        .btn-primary {
            display: inline-block;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 15px 30px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: bold;
            margin-top: 20px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }

        .time-filter {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            justify-content: center;
        }

        .time-btn {
            background: rgba(255, 255, 255, 0.9);
            border: none;
            padding: 8px 20px;
            border-radius: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .time-btn:hover {
            background: rgba(255, 255, 255, 1);
            transform: translateY(-2px);
        }

        .time-btn.active {
            background: #667eea;
            color: white;
        }

        footer {
            text-align: center;
            color: rgba(255, 255, 255, 0.7);
            padding: 30px 0;
            margin-top: 40px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
        .empty-chart {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            color: #7f8c8d;
            font-style: italic;
            text-align: center;
            padding: 40px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <h1>游늵 Dashboard de Aver칤as</h1>
            <p>Estad칤sticas y an치lisis visual de mantenimiento</p>
        </div>

        <!-- Men칰 -->
        <div class="menu">
            <a href="/">游늶 Listado</a>
            <a href="/zonas">游늸 Por Zonas</a>
            <a href="/graficos" class="active">游늵 Gr치ficos</a>
            <a href="/subir">游늹 Subir PDF</a>
        </div>

        {% if stats and stats.total_avisos > 0 %}
        <!-- Estad칤sticas r치pidas -->
        <div class="stats-bar">
            <div class="stat-card">
                <div class="stat-number">{{ stats.total_avisos }}</div>
                <div class="stat-label">Total de Aver칤as</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">{{ stats.total_zonas }}</div>
                <div class="stat-label">Zonas Activas</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">{{ stats.tipos.get('Aver칤a', 0) }}</div>
                <div class="stat-label">Aver칤as Urgentes</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">{{ stats.tipos.get('Preventivo', 0) }}</div>
                <div class="stat-label">Mantenimientos</div>
            </div>
        </div>

        <!-- Filtros de tiempo -->
        <div class="time-filter" id="timeFilter">
            <button class="time-btn active" data-days="30">칔ltimos 30 d칤as</button>
            <button class="time-btn" data-days="90">칔ltimos 3 meses</button>
            <button class="time-btn" data-days="365">칔ltimo a침o</button>
            <button class="time-btn" data-days="0">Todo</button>
        </div>

        <!-- Gr치ficos -->
        <div class="charts-grid">
            <!-- Gr치fico 1: Aver칤as por zona -->
            <div class="chart-container">
                <div class="chart-header">
                    <h2 class="chart-title">游늸 Aver칤as por Zona</h2>
                </div>
                <div class="chart-wrapper">
                    <canvas id="chartZonas"></canvas>
                </div>
            </div>

            <!-- Gr치fico 2: Evoluci칩n temporal -->
            <div class="chart-container">
                <div class="chart-header">
                    <h2 class="chart-title">游늳 Evoluci칩n Temporal</h2>
                </div>
                <div class="chart-wrapper">
                    <canvas id="chartTemporal"></canvas>
                </div>
            </div>

            <!-- Gr치fico 3: Tipos de aver칤as -->
            <div class="chart-container">
                <div class="chart-header">
                    <h2 class="chart-title">游댢 Distribuci칩n por Tipo</h2>
                </div>
                <div class="chart-wrapper">
                    <canvas id="chartTipos"></canvas>
                </div>
            </div>

            <!-- Gr치fico 4: Top 10 zonas problem치ticas -->
            <div class="chart-container">
                <div class="chart-header">
                    <h2 class="chart-title">丘멆잺 Zonas m치s Problem치ticas</h2>
                </div>
                <div class="chart-wrapper">
                    <canvas id="chartTopZonas"></canvas>
                </div>
            </div>
        </div>

        {% else %}
        <!-- Estado vac칤o -->
        <div class="empty-state">
            <h2>游닔 No hay datos para mostrar</h2>
            <p>Sube tu primer PDF para comenzar a ver estad칤sticas.</p>
            <a href="/subir" class="btn-primary">游닋 Subir primer PDF</a>
        </div>
        {% endif %}

        <footer>
            <p>Sistema de Gesti칩n de Aver칤as | Actualizado: {{ stats.get('ultima_actualizacion', 'Hoy') }}</p>
            <p>Total de registros analizados: {{ stats.total_avisos }}</p>
        </footer>
    </div>

    {% if stats and stats.total_avisos > 0 %}
    <script>
        // Datos desde Flask - Versi칩n CORREGIDA
        const statsData = {{ estadisticas|tojson }};
        const zonasData = statsData.zonas || {};
        const tiposData = statsData.tipos || {};
        const totalAvisos = statsData.total_avisos || 0;
        const totalZonas = statsData.total_zonas || 0;

        // Si necesitas fechasData, puedes crearlo vac칤o o usar el que viene
        const fechasData = statsData.fechas || {};

        // 1. GR츼FICO DE ZONAS (Barras horizontales)
        const zonasLabels = Object.keys(zonasData);
        const zonasTotales = Object.values(zonasData).map(z => z.total);
        const zonasAverias = Object.values(zonasData).map(z => z.averias);
        const zonasPreventivos = Object.values(zonasData).map(z => z.preventivos);

        const ctxZonas = document.getElementById('chartZonas').getContext('2d');
        new Chart(ctxZonas, {
            type: 'bar',
            data: {
                labels: zonasLabels,
                datasets: [
                    {
                        label: 'Aver칤as',
                        data: zonasAverias,
                        backgroundColor: 'rgba(255, 99, 132, 0.7)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Preventivos',
                        data: zonasPreventivos,
                        backgroundColor: 'rgba(75, 192, 192, 0.7)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                indexAxis: 'y',
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Aver칤as vs Preventivos por Zona'
                    }
                }
            }
        });

        // 2. GR츼FICO TEMPORAL (L칤nea)
        const fechasLabels = Object.keys(fechasData).sort();
        const fechasValues = fechasLabels.map(f => fechasData[f]);

        const ctxTemporal = document.getElementById('chartTemporal').getContext('2d');
        new Chart(ctxTemporal, {
            type: 'line',
            data: {
                labels: fechasLabels,
                datasets: [{
                    label: 'Aver칤as por d칤a',
                    data: fechasValues,
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 3,
                    tension: 0.3,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Evoluci칩n diaria de aver칤as'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });

        // 3. GR츼FICO DE TIPOS (Dona)
        const tiposLabels = Object.keys(tiposData);
        const tiposValues = Object.values(tiposData);

        const ctxTipos = document.getElementById('chartTipos').getContext('2d');
        new Chart(ctxTipos, {
            type: 'doughnut',
            data: {
                labels: tiposLabels,
                datasets: [{
                    data: tiposValues,
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.8)',  // Preventivo - Verde
                        'rgba(255, 99, 132, 0.8)',  // Aver칤a - Rojo
                        'rgba(255, 206, 86, 0.8)'   // General - Amarillo
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                    },
                    title: {
                        display: true,
                        text: 'Distribuci칩n por tipo de mantenimiento'
                    }
                }
            }
        });

        // 4. TOP ZONAS PROBLEM츼TICAS (Barras)
        // Ordenar zonas por aver칤as
        const zonasArray = Object.entries(zonasData)
            .map(([nombre, datos]) => ({ nombre, ...datos }))
            .sort((a, b) => b.averias - a.averias)
            .slice(0, 10);

        const topZonasLabels = zonasArray.map(z => z.nombre);
        const topZonasAverias = zonasArray.map(z => z.averias);

        const ctxTopZonas = document.getElementById('chartTopZonas').getContext('2d');
        new Chart(ctxTopZonas, {
            type: 'bar',
            data: {
                labels: topZonasLabels,
                datasets: [{
                    label: 'Aver칤as urgentes',
                    data: topZonasAverias,
                    backgroundColor: topZonasAverias.map(val => 
                        val > 5 ? 'rgba(255, 99, 132, 0.8)' : 
                        val > 2 ? 'rgba(255, 159, 64, 0.8)' : 
                        'rgba(75, 192, 192, 0.8)'
                    ),
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    title: {
                        display: true,
                        text: 'Top 10 zonas con m치s aver칤as urgentes'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });

        // Filtros de tiempo
        document.querySelectorAll('.time-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.time-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                const days = this.getAttribute('data-days');
                // Aqu칤 podr칤as recargar los datos con el filtro temporal
                console.log('Filtrar 칰ltimos', days, 'd칤as');
                // Implementar recarga de datos con AJAX si quieres
            });
        });
    </script>
    {% endif %}
</body>
</html>